{
  "name": "api",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:shared": "pnpm -w --filter @xm-schema/shared build:watch",
    "dev:build": "tsc -w -p tsconfig.json",
    "dev:start": "nodemon -q dist/index.js",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@xm-schema/shared": "workspace:*",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "nodemailer": "^6.9.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/nodemailer": "^7.0.2",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.2",
    "dotenv": "^17.2.3",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "supertest": "^7.1.4",
    "typescript": "^5.6.3",
    "vitest": "^4.0.2"
  }
}
